@model Vraze.Models.Facilitator
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Admin Login</h1>
</div>
<div class="col-md-6 mx-auto">
    @if (ViewData.ContainsKey("message"))
    {
    <div class="alert alert-danger alert-dismissible fade show">
        @ViewData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
    <form asp-action="Login">
        <div class="form-group">
            <label for="tbUsername">Username</label>
            <input asp-for="Username" type="text" class="form-control" id="tbUsername">
        </div>
        <div class="form-group">
            <label for="tbPassword">Password</label>
            <input asp-for="PasswordHash" type="password" class="form-control" id="tbPassword">
        </div>
        <input type="submit" value="Login" class="btn btn-primary btn-block"/>
    </form>
</div>